#use std::io

[c] func printf(fmt: ^u8, ...) -> int;

func main() -> int {
    valid: bool = true;
    match valid {
        true => io::println("true"),
        false => io::println("false"),
    }

    foo := "bar";
    match foo {
        "hello" => C::printf("foo matches hello"),
        "world" => { },
        "bar" => {
            award: ^u8 = "baz";
            C::printf("correct! you win %s\n", award);
        },
        _ => io::println("default"),
    }

    return 0;
}
