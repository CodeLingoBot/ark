#use std::io
#use std::string

pub func main() -> int {
	test := string::String::from("hello ");
	defer test.destroy();

	io::printDynamicString(test);

	test.append('w');
	test.append('o');
	test.concat("rld");
	io::printDynamicString(test);

	poppedValue := test.pop();

	io::println("just popped: ");
	io::printRune(poppedValue.unwrap());
	io::println("");

	io::printDynamicString(test);

	mut idx := uint(0);
	for idx < test.length() {
		poppedValue := test.pop();
		io::printRune(poppedValue.unwrap());
		idx += 1;
	}

	test.pop(); // none

	test.append('äº¬');
	value := test.pop();

	io::printRune('\n');
	io::printRune(value.unwrap());

	return 0;
}