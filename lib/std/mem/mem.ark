[c] func malloc(size: uint) -> ^C::void;
[c] func free(ptr: ^C::void);

pub func alloc<T>() -> ^T {
    ptr := C::malloc(sizeof(T));
    return (^T)(ptr);
}

pub func allocArray<T>(num: uint) -> []T {
    ptr := C::malloc(sizeof(T) * num);

    rawArray := struct{
        size: uint,
        raw: ^T,
    }{
        size: num,
        raw: (^T)(ptr),
    };

    arrPtr := (^[]T)(&rawArray);

    return ^arrPtr;
}

pub func free<T>(ptr: ^T) {
    C::free((^C::void)(ptr));
}
